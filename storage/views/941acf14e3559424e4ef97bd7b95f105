<table class="table input">
    <tbody>
        <tr>
            <td>
                <strong>PERIODE : </strong> <?php echo  $awal . ' - ' . $akhir ; ?>
            </td>
            <td>
                <a class="btn btn-success pull-right btn-cetak"><i class="icon-white icon-print"></i> Cetak Dokumen</a>
            </td>
        </tr>
    </tbody>
</table>
<table class="table table-bordered table-condensed">
    <thead>
        <tr>
            <th>No</th>
            <th>Tanggal</th>
            <th>Biaya</th>
            <th>Siswa</th>
            <th>Ket</th>
            <th>Pendapatan</th>
            <th>Pengeluaran</th>
        </tr>
    </thead>
    <tbody>
        <?php $rownum=1; ?>
        <?php $pendapatan=0; ?>
        <?php $pengeluaran=0; ?>
        <?php foreach($datarekap as $dr): ?>
        <tr>
            <td class="uang"><?php echo  $rownum++ ; ?></td>
            <td><?php echo  date('d-m-Y',strtotime($dr->tanggal)) ; ?></td>
            <td>
                <?php echo  $dr->jenisbiaya ; ?>
                <?php if($dr->bulan != ''): ?>
                    <?php echo  '/ '.ucwords($dr->bulan) ; ?>
                <?php endif; ?>
            </td>
            <td>
                <?php if($dr->siswa != ''): ?>
                    <?php echo  $dr->siswa ; ?>
                <?php else: ?>
                    -
                <?php endif; ?>
            </td>
            <td>
                <?php if($dr->ket != '' ): ?>
                    <?php echo  ucfirst($dr->ket) ; ?>
                <?php endif; ?>
            </td>
            <td class="uang">
                <?php if($dr->arus == 'M'): ?>
                    <?php echo  number_format($dr->jumlah,0,',','.') ; ?>
                    <?php $pendapatan += $dr->jumlah; ?>
                <?php else: ?>
                -
                <?php endif; ?>
            </td>
            <td class="uang">
                <?php if($dr->arus == 'K'): ?>
                    <?php echo  number_format($dr->jumlah,0,',','.') ; ?>
                    <?php $pengeluaran += $dr->jumlah; ?>
                <?php else: ?>
                -
                <?php endif; ?>
            </td>
        </tr>
        <?php endforeach; ?>
        <tr style="background-color: whitesmoke;font-weight: bolder;font-size: large;">
            <td colspan="5">TOTAL</td>
            <td class="uang" ><?php echo  number_format($pendapatan,0,',','.') ; ?></td>
            <td class="uang" ><?php echo  number_format($pengeluaran,0,',','.') ; ?></td>
        </tr>
    </tbody>
</table>